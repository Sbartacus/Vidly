@model Vidly.Models.Movie
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movie Edit</h2>
<h3>@Model.Name</h3>
<ul>
    <li>
        <b>Genre </b>@Model.Genre.Name
    </li>
    <li>
        <b>Release Date </b>@Model.ReleaseDate.ToString("dd-MMM-yyyy")
    </li>
    <li>
        <b>Date Added </b>@Model.DateAdded.ToString("dd-MMM-yyyy")
    </li>
    <li>
        <b>Number in stock </b>@Model.NumberInStock
    </li>
</ul>
